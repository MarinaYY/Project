    private void btn_startActionPerformed(java.awt.event.ActionEvent evt) {                                          
        try {
            obj = new SetGet(txt_firstName.getText(), txt_lastName.getText(), Integer.parseInt(txt_years.getText()), txt_colour.getText());
            System.out.println(dublicate());
            if (dublicate() == false) {
                write();
                //JOptionPane.showMessageDialog(null, "Успешно записан");
            } else {
                //JOptionPane.showMessageDialog(null, "Вече съществува");
            }
            //reader();
            ThirdPage object2 = new ThirdPage();
            object2.setVisible(true);
        } catch (NullPointerException e) {
            System.out.println("NullPointerException");
        }

    }                                         
