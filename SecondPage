    public void write() {
        FileWriter file = null;
        BufferedWriter br = null;
        try {
            file = new FileWriter("D:\\project.txt", true);
            br = new BufferedWriter(file);
            br.write(obj.toString());
            br.close();
        } catch (IOException ioe) {
            System.out.println("IOException");
        }
    }

    public boolean dublicate() {
        BufferedReader br = null;
        FileReader file = null;
        boolean b = false;
        try {
            file = new FileReader("D:\\project.txt");
            br = new BufferedReader(file);
            String line = br.readLine();
            while (line != null) {
                String text[] = line.split(" ");
                String p = text[0].concat(" ".concat(text[1]));
                if (p.equalsIgnoreCase(obj.getFirstName() + " " + obj.getLastName())) {
                    b = true;
                }
                line = br.readLine();
            }
            br.close();

        } catch (IOException ioe) {
            System.out.println("IOException");
        }
        return b;
    }

